extends base.pug

block style 
    style 
        include ../static/style.css
        include ../static/contact.css

block script
    script(src="/static/index.js")

block content
    h1 Contact Us 
    form(action="/contact", method="post", class="myForm") 
        input(type="name", class="myInput", name="name", placeholder="Name")
        input(type="email", class="myInput", name="email", placeholder="Email")
        input(type="phone", class="myInput", name="phone", placeholder="Phone")
        input(type="company", class="myInput", name="company", placeholder="Company")
        textarea(class="msg", rows="8", name="msg", placeholder="Message")